<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">

    <TableRow android:id="@+id/tableRow1">

        <ImageView
            android:id="@+id/img1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:src="@drawable/ic_folder_black_30dp" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:text="Attractions"
            android:textSize="18sp" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_local_dining_black_30dp" />

        <TextView
            android:id="@+id/text2"
            android:text="Dining"
            android:textSize="18sp" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow3"
        android:paddingTop="20dp">

        <ImageView
            android:id="@+id/img3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:src="@drawable/ic_school_black_30dp" />

        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Education"
            android:textSize="18sp" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow4"
        android:paddingTop="20dp">

        <ImageView
            android:id="@+id/img4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_group_black_30dp" />

        <TextView
            android:id="@+id/text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Family"
            android:textSize="18sp" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow5"
        android:paddingTop="20dp">

        <ImageView
            android:id="@+id/img5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_favorite_black_30dp" />

        <TextView
            android:id="@+id/text5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Health"
            android:textSize="18sp" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow6"
        android:paddingTop="20dp">

        <ImageView
            android:id="@+id/img6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_location_city_black_30dp" />

        <TextView
            android:text="Office"
            android:textSize="18sp" />
    </TableRow>

    <TableRow android:paddingTop="20dp">

        <ImageView android:src="@drawable/ic_shopping_cart_black_30dp" />

        <TextView
            android:text="Promotions"
            android:textSize="18sp" />
    </TableRow>

    <TableRow android:paddingTop="20dp">

        <ImageView android:src="@drawable/ic_radio_black_30dp" />

        <TextView
            android:text="Radio"
            android:textSize="18sp" />
    </TableRow>

    <TableRow android:paddingTop="20dp">

        <ImageView android:src="@drawable/ic_book_black_30dp" />

        <TextView
            android:text="Recipes"
            android:textSize="18sp" />
    </TableRow>

    <TableRow android:paddingTop="20dp">

        <ImageView android:src="@drawable/ic_directions_bike_black_30dp" />

        <TextView
            android:text="Sports"
            android:textSize="18sp" />
    </TableRow>
</TableLayout>
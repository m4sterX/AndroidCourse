<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/LakeInformation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="32dp"
        android:textColor="@color/black"
        android:textSize="32sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Collecting oder: narochanskiy zpovednik?" />

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/LakeInformation" />

    <TextView
        android:id="@+id/tv_h_count"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:text="@string/hoursCount"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/LakeInformation" />

    <EditText
        android:id="@+id/ET_addHoursCount"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:textAlignment="center"
        android:textSize="50sp"
        app:layout_constraintStart_toEndOf="@+id/tv_h_count"
        app:layout_constraintTop_toBottomOf="@id/LakeInformation"
        tools:text="9" />
    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_h_count"/>

    <TextView
        android:id="@+id/tv_order_house"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:text="@string/add_house"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_h_count" />

    <CheckBox
        android:id="@+id/check_adding_house"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="44dp"
        app:layout_constraintStart_toEndOf="@+id/tv_order_house"
        app:layout_constraintTop_toBottomOf="@+id/ET_addHoursCount" />

    <View
        android:id="@+id/line3"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_order_house"
        android:layout_marginStart="16dp"/>
    <TextView
        android:id="@+id/askEquipment"
        android:layout_width="200dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_order_house"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/addEqipment"
        android:layout_marginTop="32dp"/>

    <CheckBox
        android:id="@+id/check_adding_equipment"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toEndOf="@+id/askEquipment"
        app:layout_constraintTop_toBottomOf="@+id/line3" />
    <View
        android:id="@+id/line4"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/askEquipment"
        android:layout_marginStart="16dp"/>
    <ImageButton
        android:id="@+id/continueImageButton"
        android:layout_width="100dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line4"
        android:layout_marginTop="64dp"
        android:src="@drawable/ic_shopping_cart_black_24dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>